<?xml version="1.0" ?>
<ruleset>
    <arg name="colors"/>
    <arg value="p"/>
    <file>src</file>
    <file>tests</file>
    <rule ref="PSR2">
        <exclude name="PSR2.Namespaces.UseDeclaration"></exclude>
    </rule>
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests/</exclude-pattern>
    </rule>
    <exclude-pattern>/tests/report/*</exclude-pattern>
    <exclude-pattern>*/src/database/*$</exclude-pattern>
    <exclude-pattern>*/tests/migrations/*$</exclude-pattern>
</ruleset>